{
  "manifest_version": 3,
  "name": "Gmail â†’ Firebase Sync with AI",
  "version": "2.0",
  "description": "Scrapes Gmail messages, uses Chrome AI APIs, and saves to Firebase Firestore.",
  "permissions": ["scripting", "storage", "sidePanel"],
  "host_permissions": ["https://mail.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Gmail AI Assistant"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["firebase.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "firebase/firebase-app-compat.js",
        "firebase/firebase-firestore-compat.js",
        "scripts/firebase-init.js",
        "scripts/injected.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "popup.html"
  }
}
